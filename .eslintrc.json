{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "quotes": ["warn", "single"],
        "jsx-quotes": ["warn", "prefer-single"],
        "eqeqeq": ["warn", "always"],
        "no-unused-vars": "off"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
